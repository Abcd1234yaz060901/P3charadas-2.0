
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/linearlayaut"
   >
    <Button
        android:text="Volver a jugar"
        android:layout_width="wrap_content"
        android:layout_height="48.0dp"
        android:id="@+id/siguente"
        android:layout_marginBottom="0.0dp" />

    <TextView
        android:text="Pongaselo en la cabeza"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="171.0dp"
        android:id="@+id/textView1"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:typeface="monospace"
        android:onClick="amen()"
        android:textColor="#fffafafa" />
    <TextView
        android:text="60"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:textSize= "60dp"
        android:gravity="center"
        android:layout_height="77.5dp"
        android:id="@+id/txtCountDown"
        android:layout_marginBottom="11.5dp"
        android:textColor="#ffffffff" />
    <Button
        android:text="Cambiar de categoria"
        android:layout_width="wrap_content"
        android:layout_height="48.0dp"
        android:id="@+id/CambiarCat" />

</LinearLayout>